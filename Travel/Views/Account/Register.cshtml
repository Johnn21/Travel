@model Travel.Models.RegisterViewModel



<link href="@Url.Content("~/Css/test.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Css/navbar.css")" rel="stylesheet" type="text/css" />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="container">
        <img src="~/Images/image1.jpg" style="width:100%;" />
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new {placeholder = "Email",Style="background:#FFEBCD;",  @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new {placeholder = "Password",Style="background:#FFEBCD;", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new {placeholder = "Confirm Password",Style="background:#FFEBCD;", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.phoneUser, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.phoneUser, new { placeholder = "Phone Number",Style="background:#FFEBCD;",@class = "form-control" })
                @Html.ValidationMessageFor(m => m.phoneUser)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.birthdateUser, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.birthdateUser, "{0:d MMM yyyy}", new {placeholder = "Birthdate",Style="background:#FFEBCD;", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.birthdateUser)
            </div>
        </div>
        <div class="clearfix">
            <div class="col-md-offset-2 col-md-10">

                <button type="submit" value="Register" class="signupbtn">Register</button>
            </div>
        </div>
        @* <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>*@
    </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
